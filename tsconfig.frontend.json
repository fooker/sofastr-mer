{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2015", "dom"],
      //"target": "es2015",
      "moduleResolution": "node",
      "isolatedModules": true,
      "moduleDetection": "force",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noEmit": false
    },
    "include": [
      "src/**/*",
      "shared/**/*"]
  }